# FinManager — Production Environment
# Copy to .env and fill in actual values

# Database (PostgreSQL)
DATABASE_URL="postgresql://finmanager:YOUR_DB_PASSWORD@localhost:5432/finmanager?schema=public"

# Auth — CHANGE THIS! Generate with: openssl rand -hex 32
JWT_SECRET="CHANGE_ME_GENERATE_WITH_openssl_rand_hex_32"
JWT_EXPIRES_IN="7d"

# Server
PORT=3000
NODE_ENV=production

# PDF Service (runs locally)
PDF_SERVICE_URL="http://127.0.0.1:8080"
